# API Keys for LLM providers
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration
DATABASE_PATH=data/databases/mining_companies.db
INTELLIGENCE_DATABASE_PATH=data/databases/complete_mining_intelligence.db

# Crawling Configuration
CRAWL_DELAY=2
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Content Processing
MIN_WORD_COUNT=100
MAX_CONTENT_SIZE=1000000

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai/gpt-4o-mini
ALTERNATIVE_LLM_PROVIDER=anthropic/claude-3-haiku

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mining_intelligence.log