      "rare earth", "molybdenum", "tungsten"
    ],

    "financial_terms": [
      "price", "cost", "margin", "profit", "revenue", "earnings", "forecast",
      "outlook", "demand", "supply", "inventory", "futures", "spot price",
      "premium", "discount", "volatility", "trend"
    ],

    "geographic_focus": [
      "canada", "canadian", "north america", "toronto", "vancouver",
      "ontario", "quebec", "british columbia", "alberta"
    ],

    "market_indicators": [
      "bull market", "bear market", "rally", "correction", "support", "resistance",
      "breakout", "momentum", "volume", "liquidity", "hedge", "speculation"
    ]
  },

  "content_filters": {
    "relevance_scoring": {
      "mining_keywords": 3,
      "metal_commodities": 2,
      "financial_terms": 2,
      "geographic_focus": 1,
      "min_score_threshold": 5
    },
    "quality_filters": {
      "min_word_count": 100,
      "max_word_count": 5000,
      "exclude_duplicates": true,
      "require_date": true
    }
  },

  "blacklist": {
    "domains": [
      "facebook.com",
      "twitter.com", 
      "linkedin.com",
      "instagram.com",
      "youtube.com"
    ],
    "keywords": [
      "spam", "advertisement", "casino", "adult", "crypto scam",
      "get rich quick", "investment scam"
    ],
    "file_extensions": [
      ".pdf", ".doc", ".xls", ".ppt", ".zip"
    ]
  },

  "output_settings": {
    "save_raw_content": true,
    "generate_summaries": true,
    "include_metadata": true,
    "export_formats": ["json", "csv", "txt"],
    "timestamp_format": "ISO8601"
  },

  "monitoring": {
    "success_rate_threshold": 0.75,
    "alert_on_failures": true,
    "log_failed_urls": true,
    "track_response_times": true
  }
